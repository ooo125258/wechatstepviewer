<!DOCTYPE html>
<html lang="en">

 <head>
 	<meta charset="utf-8">
    <title>Data Information</title>
    <link rel="stylesheet" type="text/css" href="style.css">
 </head>

 <body>

 	<!-- The header -->
    <div class="header">
        <a href="profileView.html"><img src="../assets/home.png" id="home-logo"></a>
        <div class="buy-sell">
            <div class="header-buy">Buy</div>
            <label class="switch">
                <input type="checkbox" id="checkbox" checked=False>
                <span class="slider round"></span>
            </label>
            <div class="header-sell">Sell</div>
        </div>
        <script type="text/javascript" src="header.js"></script>
    </div>

    <div class="commissionInfo">
        <div class="datasetProfileDescription">
            <img src="{{main_image}}" id="cifar">
            <div class="datasetNameDescription">
                <h2> {{title}} </h2>
                <p> {{description}} </p>
            </div>
        </div>
        <div class="datasetPreview">
            <img src="{{comp_image_1}}" class="datasetPreviewImg">
            <img src="{{compt_image_2}}" class="datasetPreviewImg">
            <img src="{{comp_image_3}}" class="datasetPreviewImg">
        </div>
        <div class="datasetStats">
            <table id="dataStats">
                <tr>
                    <td><b>Price:</b></td>
                    <td> {{price}} </td>
                </tr>
                <tr>
                    <td><b>Quality:</b></td>
                    <td>{{quality}}</td>
                </tr>
                <tr>
                    <td><b>User Credibility:</b></td>
                    <td>{{credibility}}</td>
                </tr>

                <tr>
                    <td><b>Citations</b></td>
                    <td>{{citations}}</td>
                </tr>

            </table>
            <input id="contact" type='submit' value='Contact Buyer'/>
        </div>
    </div>
 </body>
</html>
